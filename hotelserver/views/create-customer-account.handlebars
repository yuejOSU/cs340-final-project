<body style="background-color:#FFFAED; text-align:center">
  <h1>Create a Customer Account</h1>
  <div class="create-container">
    <form action="/create-customer-account" method="POST">
      <div>
        <div class="inputs">
          <div class="first_name">
            <label>First name</label>
            <input name="first_name" type="text" required="required" placeholder="First Name">
          </div>
          <div class="last_name">
            <label>Last name</label>
            <input name="last_name" type="text" required="required" placeholder="Last Name">
          </div>
          <div class="email_address">
            <label>E-mail</label>
            <input name="email_address" type="text" required="required" placeholder="E-mail">
          </div>
          <div class="age">
            <label>Age</label>
            <input name="age" type="number" required="required" placeholder="Age">
          </div>
        </div>
        <input type="submit" name="createCustomer" value="Submit">
      </div>
    </form>
  </div>
  <div>
      <table>
        <thead>
          <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Age</th>
          </tr>
        </thead>
        <tbody>
          {{#if results}}
            {{#each results}}
              <tr id={{this.customer_id}}>
                <td>{{this.customer_id}}</td>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>{{this.email_address}}</td>
                <td>{{this.age}}</td>
              </tr>
            {{/each}}
          {{/if}}
        </tbody>
      </table>
    </div>
