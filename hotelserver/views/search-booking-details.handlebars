<body style="background-color:#FFFAED; text-align:center">
  <h1>Search Booking Details</h1>
    <div class="search-container">
      <form action="/search-booking-details" method="post">
        <div class="inputs">
          <label>Booking ID</label>
          <input name="Look up existing booking details" type="text" placeholder="Booking ID">
          <input type="submit" value="Search">
        </div>
      </form>
      <form action="/search-booking-details" method="get">
          <div class="form-group">
            <label>Filter By Name</label>
            <input name="searchFirstName" type="text" required="required" placeholder="First Name">
            <input name="searchLastName" type="text" required="required" placeholder="Last Name">
            <input type="submit" name="filterByName" value="Filter" class="btn btn-primary" />
          </div>
      </form>

      <form action="/search-booking-details" method="get">
        <div class="form-group">
          <label>Filter By Price</label>
          <input name="searchMinPrice" type="number" required="required" placeholder="Min Price">
          <input name="searchMaxPrice" type="number" required="required" placeholder="Max Price">
          <input type="submit" name="filterByPrice" value="Filter" class="btn btn-primary" />
        </div>
      </form>
    </div>

    <div>
      <table>
        <tr>
          <thead>
              <th>Booking Details ID</th>
              <th>Booking Price</th>
              <th>Customer Name</th>
              <th>Room ID</th>
              <th>Edit</th>
              <th>Delete</th>
          </thead>
        </tr>
        <tbody>
          {{#if results}}
            {{#each results}}
              <tr>
                <td>{{this.booking_details_id}}</td>
                <td>{{this.booking_price}}</td>
                <td>{{this.whole_name}}</td>
                <td>{{this.room_id}}</td>
                <td><form action="/edit" method="post"><input type="submit" value="Edit" onclick="editRow({{this.id}})"></form></td>
                <td><input type="submit" value="Delete" onclick="deleteRow({{this.id}})"></td>
              </tr>
            {{/each}}
          {{/if}}
        </tbody>
    </div>
